{
    "displayName": "High Memory Usage",
    "combiner": "OR",
    "conditions": [
      {
        "displayName": "Memory usage for API containers",
        "conditionThreshold": {
          "filter": "metric.type=\"kubernetes.io/container/memory/used_bytes\" resource.type=\"k8s_container\" metadata.system_labels.\"container_name\"=\"api\"",
          "aggregations": [
            {
              "alignmentPeriod": "60s",
              "perSeriesAligner": "ALIGN_MEAN",
              "crossSeriesReducer": "REDUCE_MEAN",
              "groupByFields": [
                "resource.label.pod_name"
              ]
            }
          ],
          "comparison": "COMPARISON_GT",
          "thresholdValue": 800000000,
          "duration": "60s",
          "trigger": {
            "count": 1
          }
        }
      },
      {
        "displayName": "Memory usage for Web containers",
        "conditionThreshold": {
          "filter": "metric.type=\"kubernetes.io/container/memory/used_bytes\" resource.type=\"k8s_container\" metadata.system_labels.\"container_name\"=\"web\"",
          "aggregations": [
            {
              "alignmentPeriod": "60s",
              "perSeriesAligner": "ALIGN_MEAN",
              "crossSeriesReducer": "REDUCE_MEAN",
              "groupByFields": [
                "resource.label.pod_name"
              ]
            }
          ],
          "comparison": "COMPARISON_GT",
          "thresholdValue": 800000000,
          "duration": "60s",
          "trigger": {
            "count": 1
          }
        }
      }
    ],
    "alertStrategy": {
      "autoClose": "604800s"
    },
    "documentation": {
      "content": "This policy triggers when memory usage exceeds 800MB for any pod in the face detection application.",
      "mimeType": "text/markdown"
    },
    "severity": "WARNING"
  }