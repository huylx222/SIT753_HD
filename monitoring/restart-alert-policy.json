{
  "displayName": "Container Restart Alert",
  "documentation": {
    "content": "Multiple container restarts detected within the last 15 minutes. This may indicate application crashes or resource constraints.",
    "mimeType": "text/markdown"
  },
  "conditions": [
    {
      "displayName": "Container restart count exceeds threshold",
      "conditionThreshold": {
        "filter": "resource.type=\"k8s_container\" AND (resource.labels.container_name=\"api\" OR resource.labels.container_name=\"web\") AND metric.type=\"kubernetes.io/container/restart_count\"",
        "aggregations": [
          {
            "alignmentPeriod": "900s",
            "perSeriesAligner": "ALIGN_DELTA"
          }
        ],
        "comparison": "COMPARISON_GT",
        "thresholdValue": 1,
        "duration": "0s",
        "trigger": {
          "count": 1
        }
      }
    }
  ],
  "alertStrategy": {
    "autoClose": "3600s"
  },
  "combiner": "OR"
}