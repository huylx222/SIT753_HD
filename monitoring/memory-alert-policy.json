{
  "displayName": "High Memory Usage Alert",
  "documentation": {
    "content": "Memory usage has exceeded 85% for over 5 minutes on either the API or web containers. Check for memory leaks or consider increasing resource limits.",
    "mimeType": "text/markdown"
  },
  "conditions": [
    {
      "displayName": "Memory usage exceeds threshold",
      "conditionThreshold": {
        "filter": "resource.type=\"k8s_container\" AND (resource.labels.container_name=\"api\" OR resource.labels.container_name=\"web\") AND metric.type=\"kubernetes.io/container/memory/used_bytes\"",
        "aggregations": [
          {
            "alignmentPeriod": "60s",
            "perSeriesAligner": "ALIGN_MEAN"
          }
        ],
        "comparison": "COMPARISON_GT",
        "thresholdValue": 0.05,
        "duration": "300s",
        "trigger": {
          "count": 1
        }
      }
    }
  ],
  "alertStrategy": {
    "autoClose": "1800s"
  },
  "combiner": "OR"
}